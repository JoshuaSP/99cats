<h1>Here is a Cat:</h1>


<table>
  <tr>
    <td>
      Name:
    </td>
    <td>
      <%= @cat.name %>
    </td>
  </tr>
  <tr>
    <td>
      Sex:
    </td>
    <td>
      <%= @cat.sex == 'M' ? "Male" : "Female" %>
    </td>
  </tr>
  <tr>
    <td>
      Color:
    </td>
    <td>
      <%= @cat.color %>
    </td>
  </tr>
  <tr>
    <td>
      Age:
    </td>
    <td>
      <%= @cat.age %>
    </td>
  </tr>
  <tr>
    <td>
      Description:
    </td>
    <td>
      <%= @cat.description %>
    </td>
  </tr>
</table>


<table>
  <tr>
    <th>
      Start Date
    </th>
    <th>
      End Date
    </th>
    <th>
      Status
    </th>
  </tr>
  <% @cat.cat_rental_requests.order(:start_date).each do |rental| %>
    <tr>
      <td>
        <%= rental.start_date %>
      </td>
      <td>
        <%= rental.end_date %>
      </td>
      <td>
        <%= rental.status %>
      </td>
      <% if rental.status == 'PENDING' %>
        <td>
          <%= button_to "Approve!", request_approve_url(rental) %>
        </td>
        <td>
          <%= button_to "Deny!", request_deny_url(rental) %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>

<%= link_to "All The Cats", cats_url %>
